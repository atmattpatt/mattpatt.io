{% extends "layout.twig" %}
{% block title %}My Work - {% endblock %}
{% block body %}
<section class="container">
    <header class="page-header">
        <h1>My Work <small></small></h1>
    </header>
    <div class="row">
        <div class="col-md-12">
            <h2>Professional Experience</h2>
            {% for job in jobs.professional %}
                {% include "work/job.twig" with {'job': job} %}
            {% endfor %}
            <hr/>
            <h2>Volunteer Experience</h2>
            {% for job in jobs.volunteer %}
                {% include "work/job.twig" with {'job': job} %}
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}